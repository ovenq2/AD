<!-- Views/Request/CreateUser.cshtml - CDN Linkleri Düzeltilmiş -->
@model ADUserManagement.Models.ViewModels.UserCreationRequestViewModel
@{
    ViewData["Title"] = "Yeni Kullanıcı Açma Talebi";
}

<div class="row">
    <div class="col-md-8 mx-auto">
        <div class="card">
            <div class="card-header">
                <h4 class="mb-0">
                    <i class="bi bi-person-plus"></i> Yeni Kullanıcı Açma Talebi
                </h4>
            </div>
            <div class="card-body">
                <form id="createUserForm" method="post" action="/Request/CreateUser">
                    @Html.AntiForgeryToken()
                    
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="FirstName" class="form-label">
                                    İsim <span class="text-danger">*</span>
                                </label>
                                <input asp-for="FirstName" class="form-control" required />
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>
                        </div>
                        
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="LastName" class="form-label">
                                    Soyisim <span class="text-danger">*</span>
                                </label>
                                <input asp-for="LastName" class="form-control" required />
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="Username" class="form-label">
                                    Kullanıcı Adı <span class="text-danger">*</span>
                                </label>
                                <input asp-for="Username" class="form-control" placeholder="örn: john.doe" required />
                                <span asp-validation-for="Username" class="text-danger"></span>
                            </div>
                        </div>
                        
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="Email" class="form-label">
                                    E-posta <span class="text-danger">*</span>
                                </label>
                                <input asp-for="Email" class="form-control" type="email" required />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="Phone" class="form-label">
                                    Telefon <span class="text-danger">*</span>
                                </label>
                                <input asp-for="Phone" class="form-control" placeholder="örn: 0532 123 45 67" required />
                                <span asp-validation-for="Phone" class="text-danger"></span>
                            </div>
                        </div>
                        
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="Location" class="form-label">
                                    Lokasyon <span class="text-danger">*</span>
                                </label>
                                <input asp-for="Location" class="form-control" placeholder="örn: İstanbul Ofis" required />
                                <span asp-validation-for="Location" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="Department" class="form-label">
                                    Birim <span class="text-danger">*</span>
                                </label>
                                <input asp-for="Department" class="form-control" placeholder="örn: Bilgi Teknolojileri" required />
                                <span asp-validation-for="Department" class="text-danger"></span>
                            </div>
                        </div>
                        
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="Title" class="form-label">
                                    Unvan <span class="text-danger">*</span>
                                </label>
                                <input asp-for="Title" class="form-control" placeholder="örn: Yazılım Uzmanı" required />
                                <span asp-validation-for="Title" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="CompanyId" class="form-label">
                            Şirket <span class="text-danger">*</span>
                        </label>
                        <select asp-for="CompanyId" asp-items="Model.Companies" class="form-select" required>
                            <option value="">-- Şirket Seçiniz --</option>
                        </select>
                        <span asp-validation-for="CompanyId" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Description" class="form-label">
                            Açıklama / Notlar
                        </label>
                        <textarea asp-for="Description" class="form-control" rows="3" 
                                  placeholder="Active Directory üzerinde Description alanına yazılacak bilgiler..."></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <hr />

                    <div class="d-flex justify-content-between">
                        <a href="/Request/MyRequests" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> İptal
                        </a>
                        <button type="submit" class="btn btn-primary" id="submitBtn">
                            <i class="bi bi-check-circle"></i> Talep Oluştur
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    
    <!-- jQuery Validation -->
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.5/dist/jquery.validate.min.js"></script>
    
    <!-- jQuery Validation Unobtrusive - GÜNCEL LINK -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
    
    <script>
        $(document).ready(function() {
            console.log('Form yüklendi');
            console.log('jQuery version:', $.fn.jquery);
            console.log('Validation loaded:', typeof $.validator !== 'undefined');
            
            // Form submit olduğunda
            $('#createUserForm').on('submit', function(e) {
                console.log('Form gönderiliyor...');
                
                // Formdaki değerleri kontrol et
                var formValid = true;
                var emptyFields = [];
                
                // Required alanları kontrol et
                $(this).find('input[required], select[required]').each(function() {
                    if (!$(this).val()) {
                        formValid = false;
                        emptyFields.push($(this).attr('name'));
                        $(this).addClass('is-invalid');
                    } else {
                        $(this).removeClass('is-invalid');
                    }
                });
                
                if (!formValid) {
                    console.log('Boş alanlar:', emptyFields);
                    alert('Lütfen tüm zorunlu alanları doldurun!');
                    e.preventDefault();
                    return false;
                }
                
                // Submit butonunu devre dışı bırak
                $('#submitBtn').prop('disabled', true)
                    .html('<span class="spinner-border spinner-border-sm me-2"></span>Gönderiliyor...');
            });
            
            // Input değişikliklerini izle
            $('input[required], select[required]').on('change blur', function() {
                if ($(this).val()) {
                    $(this).removeClass('is-invalid');
                }
            });
        });
    </script>
}