@model ADUserManagement.Models.ViewModels.LoginViewModel
@{
    Layout = null;
    var companyName = ViewData["CompanyName"]?.ToString() ?? "AD Kullanıcı Yönetim Sistemi";
    var domainName = ViewData["DomainName"]?.ToString() ?? "";
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Giriş - @companyName</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <style>
        body {
            background: linear-gradient(135deg, #2c3e50 0%, #3498db 100%);
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .login-container {
            background: white;
            border-radius: 15px;
            box-shadow: 0 15px 35px rgba(0,0,0,0.2);
            padding: 40px;
            width: 100%;
            max-width: 420px;
            animation: slideIn 0.5s ease-out;
        }

        @@keyframes slideIn {
            from {
                transform: translateY(-20px);
                opacity: 0;
            }
            to {
                transform: translateY(0);
                opacity: 1;
            }
        }

        .login-header {
            text-align: center;
            margin-bottom: 30px;
        }

        .login-header i {
            font-size: 4rem;
            color: #3498db;
            margin-bottom: 15px;
        }

        .company-name {
            color: #2c3e50;
            font-weight: 600;
            font-size: 1.3rem;
            margin-bottom: 5px;
        }

        .domain-info {
            color: #7f8c8d;
            font-size: 0.9rem;
            margin-bottom: 20px;
        }

        .form-control {
            border-radius: 8px;
            padding: 12px 15px;
            border: 2px solid #ecf0f1;
            transition: all 0.3s;
        }

        .form-control:focus {
            border-color: #3498db;
            box-shadow: 0 0 0 0.2rem rgba(52, 152, 219, 0.25);
            transform: translateY(-1px);
        }

        .btn-login {
            background: linear-gradient(135deg, #3498db 0%, #2980b9 100%);
            border: none;
            padding: 12px 20px;
            font-weight: 600;
            border-radius: 8px;
            transition: all 0.3s;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        .btn-login:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(52, 152, 219, 0.4);
        }

        .form-label {
            font-weight: 600;
            color: #2c3e50;
            margin-bottom: 8px;
        }

        .input-group {
            margin-bottom: 20px;
        }

        .username-help {
            font-size: 0.85rem;
            color: #7f8c8d;
            margin-top: 5px;
        }

        .alert {
            border-radius: 8px;
            border: none;
            font-size: 0.9rem;
        }

        .footer-info {
            text-align: center;
            margin-top: 25px;
            padding-top: 20px;
            border-top: 1px solid #ecf0f1;
            color: #7f8c8d;
            font-size: 0.85rem;
        }
    </style>
</head>
<body>
    <div class="login-container">
        <div class="login-header">
            <i class="bi bi-shield-lock"></i>
            <div class="company-name">@companyName</div>
            @if (!string.IsNullOrEmpty(domainName))
            {
                <div class="domain-info">
                    <i class="bi bi-building"></i> @domainName Domain
                </div>
            }
            <p class="text-muted">Lütfen giriş yapın</p>
        </div>

        <form method="post" action="/Account/Login" autocomplete="on">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="@ViewData["ReturnUrl"]" />

            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert">
                <i class="bi bi-exclamation-triangle me-2"></i>
                <span asp-validation-summary="ModelOnly"></span>
            </div>

            <div class="input-group">
                <label asp-for="Username" class="form-label">
                    <i class="bi bi-person me-1"></i>Kullanıcı Adı
                </label>
                <input asp-for="Username" 
                       class="form-control" 
                       placeholder="@(!string.IsNullOrEmpty(domainName) ? $"{domainName}\\kullaniciadi" : "kullaniciadi")"
                       autocomplete="username"
                       autofocus />
                <span asp-validation-for="Username" class="text-danger"></span>
                @if (!string.IsNullOrEmpty(domainName))
                {
                    <div class="username-help">
                        <i class="bi bi-info-circle me-1"></i>
                        Domain belirtmezseniz otomatik olarak "@domainName" kullanılacaktır
                    </div>
                }
            </div>

            <div class="input-group">
                <label asp-for="Password" class="form-label">
                    <i class="bi bi-lock me-1"></i>Şifre
                </label>
                <input asp-for="Password" 
                       type="password" 
                       class="form-control" 
                       placeholder="Şifrenizi girin"
                       autocomplete="current-password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="d-grid">
                <button type="submit" class="btn btn-primary btn-login">
                    <i class="bi bi-box-arrow-in-right me-2"></i>Giriş Yap
                </button>
            </div>
        </form>

        <div class="footer-info">
            <div>
                <i class="bi bi-shield-check me-1"></i>
                Güvenli Active Directory kimlik doğrulama
            </div>
            <div class="mt-1">
                <small>v2.0 - Multi-Domain Support</small>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>