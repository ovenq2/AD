@model ADUserManagement.Models.Dto.ADUserDetailsDto
@{
    ViewData["Title"] = "Kullanıcı Detayları";
}

<div class="row">
    <div class="col-md-10 mx-auto">
        <div class="card">
            <div class="card-header bg-info text-white">
                <h4 class="mb-0">
                    <i class="bi bi-person-circle"></i> @Model.DisplayName - Kullanıcı Detayları
                </h4>
            </div>
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-md-6">
                        <table class="table table-sm">
                            <tr>
                                <th width="40%">Kullanıcı Adı:</th>
                                <td><code>@Model.Username</code></td>
                            </tr>
                            <tr>
                                <th>İsim:</th>
                                <td>@Model.FirstName</td>
                            </tr>
                            <tr>
                                <th>Soyisim:</th>
                                <td>@Model.LastName</td>
                            </tr>
                            <tr>
                                <th>E-posta:</th>
                                <td>
                                    @if (!string.IsNullOrEmpty(Model.Email))
                                    {
                                        <a href="mailto:@Model.Email">@Model.Email</a>
                                    }
                                </td>
                            </tr>
                            <tr>
                                <th>Telefon:</th>
                                <td>@(Model.Phone ?? "-")</td>
                            </tr>
                            <tr>
                                <th>Mobil:</th>
                                <td>@(Model.Mobile ?? "-")</td>
                            </tr>
                        </table>
                    </div>
                    <div class="col-md-6">
                        <table class="table table-sm">
                            <tr>
                                <th width="40%">Birim:</th>
                                <td>@(Model.Department ?? "-")</td>
                            </tr>
                            <tr>
                                <th>Unvan:</th>
                                <td>@(Model.Title ?? "-")</td>
                            </tr>
                            <tr>
                                <th>Ofis:</th>
                                <td>@(Model.Office ?? "-")</td>
                            </tr>
                            <tr>
                                <th>Durum:</th>
                                <td>
                                    @if (Model.IsEnabled)
                                    {
                                        <span class="badge bg-success">Aktif</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Pasif</span>
                                    }
                                </td>
                            </tr>
                            <tr>
                                <th>Oluşturulma:</th>
                                <td>@(Model.Created?.ToString("dd.MM.yyyy") ?? "-")</td>
                            </tr>
                            <tr>
                                <th>Son Giriş:</th>
                                <td>@(Model.LastLogon?.ToString("dd.MM.yyyy HH:mm") ?? "-")</td>
                            </tr>
                        </table>
                    </div>
                </div>
                
                @if (!string.IsNullOrEmpty(Model.Description))
                {
                    <div class="row">
                        <div class="col-12">
                            <strong>Açıklama:</strong>
                            <p class="mt-2">@Model.Description</p>
                        </div>
                    </div>
                }
                
                <hr />
                
                <div class="d-flex justify-content-between">
                    <a href="/UserSearch" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Geri
                    </a>
                    <div>
                        <a href="/Request/ChangeAttribute?username=@Model.Username" class="btn btn-primary">
                            <i class="bi bi-pencil"></i> Attribute Değiştirme Talebi
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>